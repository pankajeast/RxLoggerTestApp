<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Alert Dialog Theme -->
    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:background">#686764</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">#E1E1E1</item>
        <!-- Background tint for the button -->
        <!--<item name="backgroundTint">@color/primaryDarkColor</item>-->
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">#E1E1E1</item>
        <!-- Background tint for the button -->
        <!--<item name="backgroundTint">@color/primaryDarkColor</item>-->
    </style>

    <style name="Theme.RemoveSplashScreenTheme" parent="@style/Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
